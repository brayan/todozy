<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/vh_selectable_item__img__selected"
        android:layout_centerInParent="true"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:tint="?colorAccent"
        app:srcCompat="@drawable/ic_check_white_36dp"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/vh_selectable_item__tv__name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/vh_selectable_item__img__selected"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/md_blue_grey_700"
        android:textSize="@dimen/text_size_small"
        tools:text="Selectable item"/>


</RelativeLayout>